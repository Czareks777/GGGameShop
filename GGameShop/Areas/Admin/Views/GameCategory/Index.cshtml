@using Models.Models
@model List<GameCategory>



<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h3 class="text-primary ">
            </h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="GameCategory" asp-action="Create" class="btn btn-primary">
                <i class=" bi bi-database-fill-add text-success"> </i> New Category
            </a>
        </div>
    </div>


    <h1>Game Category List</h1>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Category
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Category</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="GameCategory" asp-action="Edit" asp-route-gameCategoryId="@item.Id" class="btn btn-primary mx-1">
                                <i class="bi bi-database-fill-gear text-warning"></i> Edit
                            </a>
                            <a asp-controller="GameCategory" asp-action="Delete" asp-route-gameCategoryId="@item.Id" class="btn btn-primary mx-1 ">
                                <i class="bi bi-database-fill-dash text-danger"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>


    </table>
</div>